rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
    allow read;
    allow write :if request.auth.uid == uid
    }
    match /chats/{chatID=**}{
    allow read,write
    }
    match /cards/{cardsID=**}{
    allow read,write
    }
    match /cardsData/{cardsNumber=**}{
    allow read,write
    }
  }
}